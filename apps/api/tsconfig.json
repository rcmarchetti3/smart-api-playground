{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src", "../../packages/shared"]
  // NOTE: do NOT set "rootDir" to src, or you'll get
  // "is not under 'rootDir'" when importing from packages/shared.
}